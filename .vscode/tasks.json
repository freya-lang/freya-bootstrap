				"close": true,
			},
		},
		{
			"label": "run cargo fmt",
			"type": "shell",
			"command": "cargo fmt",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false,
				"close": true,
			},
		},
